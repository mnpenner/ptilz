{
    "name": "mnpenner/ptilz",
    "description": "PHP utilities",
    "license": "MIT",
    "authors": [
        {
            "name": "Mark Penner",
            "email": "mark@mpen.ca"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "ext-bcmath": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "Ptilz\\": "src/"
        },
        "files": ["src/bootstrap.php"]
    },
    "scripts": {
        "test": "phpunit --color=always"
    },
    "config": {
        "optimize-autoloader": true
    }
}

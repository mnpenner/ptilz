{
    "name": "mnpenner/ptilz",
    "description": "PHP utilities",
    "license": "MIT",
    "authors": [
        {
            "name": "Mark Penner",
            "email": "mark@mpen.ca"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.1",
        "ext-bcmath": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "symfony/var-dumper": "^2.7",
        "phpunit/phpunit": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Ptilz\\": "src/"
        },
        "files": ["src/bootstrap.php"]
    },
    "scripts": {
        "test": "phpunit --color=always"
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "7.1"
        }
    }
}
